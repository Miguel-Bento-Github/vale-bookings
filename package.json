{
  "name": "valet-backend",
  "version": "1.0.0",
  "description": "Backend API for Valet Booking Platform",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest --runInBand --forceExit",
    "test:fast": "jest --runInBand --forceExit --bail=1 --coverage=false",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration/ --runInBand --forceExit",
    "test:unit": "jest --testPathPattern=unit/ --runInBand --forceExit",
    "test:unit:fast": "jest --testPathPattern=unit/ --runInBand --forceExit --bail=1",
    "test:coverage": "jest --coverage --runInBand --forceExit",
    "test:coverage:ci": "jest --coverage --runInBand --forceExit --verbose",
    "lint": "eslint 'src/**/*.ts' '__tests__/unit/**/*.ts' '__tests__/integration/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' '__tests__/unit/**/*.ts' '__tests__/integration/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts' '__tests__/unit/**/*.ts' '__tests__/integration/**/*.ts' --max-warnings 0",
    "lint:security": "eslint src/**/*.ts --config .eslintrc.js --no-eslintrc",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commitlint:test": "echo 'feat(api): example backend commit message' | commitlint",
    "create-admin": "ts-node src/scripts/createAdmin.ts"
  },
  "keywords": [
    "valet",
    "booking",
    "api",
    "typescript",
    "mongodb"
  ],
  "author": {
    "name": "Miguel Bento",
    "email": "document.body.title@gmail.com",
    "url": "https://mr-monkey.net/",
    "github": "https://github.com/Miguel-Bento-Github"
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^8.45.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.6.1",
    "mongodb-memory-server": "^8.14.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
